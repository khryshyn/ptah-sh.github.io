{
    "name": "MySQL",
    "slug": "databases/mysql",
    "description": "Single-server MySQL database",
    "about": "MySQL is a powerful, open-source relational database management system that uses SQL language to manage and scale the most complicated data workloads.",
    "url": "https://www.mysql.com/",
    "tags": ["rdbms"],
    "form": {
        "schema": {
            "type": "object",
            "properties": {
                "user": { "type": "string" },
                "password": { "type": "string" },
                "database": { "type": "string" },
                "rootUser": { "type": "string" },
                "rootPassword": { "type": "string" }
            },
            "required": ["user", "password", "database", "rootUser", "rootPassword"]
        }
    },
    "processes": [
        {
            "name": "MySQL",
            "description": "MySQL database",
            "url": "https://github.com/bitnami/containers/tree/main/bitnami/mysql",
            "data": {
                "name": "mysql",
                "dockerImage": "bitnami/mysql:8.4",
                "envVars": [
                    {
                        "name": "MYSQL_USER",
                        "value": "{{user}}"
                    },
                    {
                        "name": "MYSQL_DATABASE",
                        "value": "{{database}}"
                    }
                ],
                "secretVars": {
                    "vars": [
                        {
                            "name": "MYSQL_ROOT_PASSWORD",
                            "value": "{{rootUser}}"
                        },
                        {
                            "name": "MYSQL_ROOT_PASSWORD",
                            "value": "{{rootPassword}}"
                        },
                        {
                            "name": "MYSQL_PASSWORD",
                            "value": "{{password}}"
                        }
                    ]
                },
                "volumes": [
                    {
                        "name": "data",
                        "path": "/bitnami/mysql",
                        "backupSchedule": null
                    }
                ]
            }
        }
    ]
}
