---
import { Icon } from "@astrojs/starlight/components";
import FatCheckIcon from "../components/icons/FatCheckIcon.astro";

const {
    name,
    description,
    price,
    singleServer,
    mostPopular,
    prioritySupport,
    waitlist,
} = Astro.props;
---

<div
    class="w-full max-w-sm mt-4 p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-8 dark:bg-gray-800 dark:border-gray-700"
>
    <div class="flex flex-col items-center">
        {
            mostPopular && (
                <div class="absolute -m-12 -rotate-3 bg-green-600 font-semibold text-white w-44 text-center rounded">
                    <div class="rotate-2 p-2 font-mono">most popular</div>
                </div>
            )
        }
        <div class="font-semibold">{name}</div>
        <div class="items-baseline text-gray-900 dark:text-white">
            <span class="text-3xl font-semibold">$</span>
            <span class="text-5xl font-extrabold tracking-tight">{price}</span>
            <span
                class="ms-1 text-xl font-normal text-gray-500 dark:text-gray-400"
            >
                /mo
            </span>
        </div>
        <small class="italic text-gray-400">(price excludes tax)</small>
    </div>
    <ul role="list" class="space-y-5 my-7 ps-0">
        <li class="flex items-center">
            <svg
                class="flex-shrink-0 w-4 h-4 text-blue-700 dark:text-blue-500"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 20 20"
            >
                <path
                    d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"
                ></path>
            </svg>
            <span
                class="leading-tight dark:text-gray-400 ms-3 text-lg text-green-600 font-bold"
            >
                Free 14 Days Trial
            </span>
        </li>
        <li class="flex">
            <svg
                class="flex-shrink-0 w-4 h-4 text-blue-700 dark:text-blue-500"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 20 20"
            >
                <path
                    d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"
                ></path>
            </svg>
            <span
                class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400 ms-3"
            >
                Unlimited Apps
            </span>
        </li>
        <li class="flex">
            <svg
                class="flex-shrink-0 w-4 h-4 text-blue-700 dark:text-blue-500"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 20 20"
            >
                <path
                    d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"
                ></path>
            </svg>
            <span
                class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400 ms-3"
            >
                Unlimited Databases
            </span>
        </li>
        <li class="flex">
            <svg
                class="flex-shrink-0 w-4 h-4 text-blue-700 dark:text-blue-500"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 20 20"
            >
                <path
                    d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"
                ></path>
            </svg>
            <span
                class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400 ms-3"
            >
                Unlimited Backups
            </span>
        </li>
        <li class="flex items-center">
            {
                singleServer ? (
                    <Icon name="approve-check-circle" />
                ) : (
                    <FatCheckIcon />
                )
            }

            <span
                class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400 ms-3"
            >
                {singleServer ? "Single Server" : "Unlimited Servers"}
            </span>
        </li>
        <li class="flex">
            {
                prioritySupport ? (
                    <FatCheckIcon />
                ) : (
                    <Icon name="approve-check-circle" />
                )
            }

            <span
                class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400 ms-3"
            >
                {prioritySupport ? "Priority Support" : "Basic Support"}
            </span>
        </li>
    </ul>

    <div class="italic text-sm text-center text-balance p-2">{description}</div>

    {
        waitlist ? (
            <button
                type="button"
                onclick={"window.open('" + waitlist + "')"}
                class="cursor-pointer text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-200 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-900 rounded-lg text-sm px-5 py-2.5 inline-flex justify-center w-full text-center font-medium"
            >
                Join the Waitlist!
            </button>
        ) : (
            <a
                href="https://ctl.ptah.sh/register"
                style="color: white;"
                class="no-underline bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-200 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-900 rounded-lg text-sm px-5 py-2.5 inline-flex justify-center w-full text-center font-medium"
            >
                Start free Trial
            </a>
        )
    }
</div>
